{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules",
      "coverage/lcov-report/*.js",
      "src/Lib/**/*.js"
    ]
  },
  "rules": {
    "semicolon": [true, "never"],
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "no-console": false,
    "member-access": false,
    "jsx-no-lambda": false,
    "object-literal-shorthand": false
  }
}
